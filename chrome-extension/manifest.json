{
  "manifest_version": 3,
  "name": "BackPages - Website Transparency",
  "version": "1.0.0",
  "description": "See what's behind every website with reviews, complaints, and advice from real users.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://*.backpages.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BackPages - See What's Behind This Website"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}